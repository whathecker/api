{
    "AWSEBDockerrunVersion": 2,
    "Authentication": {
      "Bucket": "elasticbeanstalk-eu-west-3-243549454379",
      "Key": "docker-auth/.dockercfg"
    },
    "volumes": [
      {
        "name": "rabbitmq-conf",
        "host": {
          "sourcePath": "/var/app/current/rabbitmq/rabbitmq.conf"
        }
      },
      {
        "name": "nginx-conf",
        "host": {
          "sourcePath": "/var/app/current/nginx/nginx.conf"
        }
      }
    ],
    "containerDefinitions": [
      {
        "name": "nodeapp",
        "image": "hellochokchok/backend:latest",
        "essential": false,
        "memoryReservation": 400,
        "portMappings": [
          {
            "containerPort": 8081,
            "hostPort": 8081
          }
        ],
        "links": [
          "rabbitmq"
        ],
        "dependsOn": [
          {
            "containerName": "rabbitmq",
            "condition" : "SUCCESS"
          }
        ]
      },
      {
          "name": "rabbitmq",
          "hostname": "rabbitmq",
          "image": "rabbitmq",
          "essential": true,
          "memoryReservation": 128,
          "portMappings": [
            {
              "containerPort": 15672,
              "hostPort": 15672
            },
            {
              "containerPort": 5672,
              "hostPort": 5672
            }
          ],
          "command": ["rabbitmq-server"],
          "mountPoints": [
            {
              "sourceVolume": "rabbitmq-conf",
              "containerPath": "/etc/rabbitmq/rabbitmq.conf"
            }
          ]
      },
      {
        "name": "nginx",
        "hostname": "nginx",
        "image": "nginx",
        "essential": true,
        "memoryReservation": 128,
        "portMappings": [
          {
            "containerPort": 80,
            "hostPort": 80
          }
        ],
        "mountPoints": [
          {
            "sourceVolume": "nginx-conf",
            "containerPath": "/etc/nginx/nginx.conf"
          }
        ],
        "dependsOn": [
          {
            "containerName": "nodeapp",
            "condition" : "SUCCESS"
          }
        ]
      }
    ]
  }